@page "/login"
@inject UserVM _userVM
@inject NavigationManager _navMngr

<h3><b>Login</b></h3>
<hr />

<div class="col-6">
    <label>@_userVM.Message</label>
    <input type="text" @bind-value="_userVM.User.Email" name="email" class="form-control" placeholder="Email address" />
</div>
<div class="col-6">
    <input type="password" @bind-value="_userVM.User.Password" name="password" class="form-control" placeholder="Password" />
</div>
<div class="col-6">
    <button class="btn btn-primary" @onclick="LoginUser"></button>
</div>



@code {

    public async Task LoginUser()
    {
        await _userVM.Login();
        _navMngr.NavigateTo("/");
    }

}
