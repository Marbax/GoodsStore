@page "/Good/Edit"
@page "/Good/Edit/{ItemId:int}"
@inject IGenericItemVM<GoodDTO> _vm

@if (!_vm.IsReady)
{
    <Loading Title="Good is loading." />
}
else
{
    <label class="text-muted mx-2">@_vm.Message</label>

    <EditForm Model="@_vm" OnValidSubmit="@HandleValidSubmit">
        <ValidationSummary />
        <div class="col-6 m-2 form-group row">
            <label class="control-label col-md-4" for="title">Title:</label>
            <InputText type="text" @bind-Value="_vm.Item.Title" name="title" class="form-control col" placeholder="Title" />
            <ValidationMessage For="@(() => _vm.Item.Title)" />
        </div>
        <div class="col-6 m-2 form-group row">
            <label class="control-label col-md-4" for="title">Price:</label>
            <InputNumber type="number" @bind-Value="_vm.Item.Price" name="price" class="form-control col" placeholder="Price" />
            <ValidationMessage For="@(() => _vm.Item.Price)" />
        </div>
        <div class="col-6 m-2 form-group row">
            <label class="control-label col-md-4" for="title">Count:</label>
            <InputNumber type="number" @bind-Value="_vm.Item.Count" name="count" class="form-control col" placeholder="Count" />
            <ValidationMessage For="@(() => _vm.Item.Count)" />
        </div>
        @if (_vm.Item.Categories.Count() > 0)
        {
            <div class="col-6 m-2 form-group row">
                <label class="control-label col-md-4">Categories Count: </label>
                <label class="control-label col">@_vm.Item.Categories.Count()</label>
            </div>
            <div class="col-6 m-2 form-group row">
                <label class="control-label col-md-4">Categories: </label>
                <label class="control-label col">@_vm.Item.Categories.ToList().Select(i => i.ToString()).Aggregate((f, s) => f + " , " + s)</label>
            </div>
        }
        @if (_vm.Item.Manufacturer?.Title.Length > 0)
        {
            <div class="col-6 m-2 form-group row">
                <label class="control-label col-md-4">Manufacturer: </label>
                <label class="control-label col">@_vm.Item.Manufacturer.ToString()</label>
            </div>
        }
        @if (ItemId > 0)
        {
            <button class="btn btn-primary" type="submit">Update</button>
        }
        else
        {
            <button class="btn btn-primary" type="submit">Add</button>
        }
    </EditForm>

}

@code {
    [Parameter]
    public int ItemId { get; set; } = -1;

    protected override async Task OnInitializedAsync()
    {
        if (ItemId > 0)
            await _vm.GetItemAsync(ItemId);
        else
            _vm.Item = new GoodDTO();
    }

    private async Task HandleValidSubmit()
    {
        if (ItemId > 0)
            await _vm.UpdateItem();
        else
            await _vm.AddItem();
    }

}
